[data-page='friends']
	
	.main-content
		overflow auto
		background $light-grey
		min-height calc(100vh - 79px)
		
		@import "elements/connections-menu"
					
		section
			width 90%
			max-width 1090px
			margin auto
			margin-top 20px
				
			.title
				font-size 18px
				margin-bottom 10px
				
				@media(max-width 700px)
					font-size 15px
				
			.content
				&:empty:after
					content 'Nothing here'
					color rgba(black, .3)
					font-size 17px
					position relative
				
				@import "elements/profilecard"
				
				.add-card
					background-image url('../icons/plus.png')
					background-size 60%
					background-position center center
					background-repeat no-repeat
					height 100px
					width 100px
					background-color white
					border-radius 5px
					cursor pointer

			
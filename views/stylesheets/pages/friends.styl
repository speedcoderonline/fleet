[data-page='friends']
	
	.main-content
		overflow auto
		background $light-grey
		min-height calc(100vh - 79px)
		
		@import "elements/connections-menu"
					
		section
			width 90%
			max-width 1090px
			margin auto
			margin-top 20px
				
			.title
				font-size 18px
				margin-bottom 10px
				
				@media(max-width 700px)
					font-size 15px
				
			.content
				position relative
				.item
					display inline-block
					margin-right 22px
					margin-bottom 22px
					padding 20px
					border-top solid 15px $team-grey
					box-shadow -4px 20px 40px rgba(black,.08)
					width 250px
					height 250px
					background white
					
					&:last-child
						margin-right 0						
					
					.images
						width max-content
						margin auto
						padding-right 35px
						margin-bottom 10px
						.frame
							height 70px
							width 35px
							position relative
							display inline-block
							.image
								height 70px
								width 70px
								border-radius 50%
								background $purple
					
					.text-wrapper
						text-align center

						h5.title
							font-size 15px
							margin-bottom 0
							
						p.description
							font-size 18px
							line-height 135%
					
					@media(max-width 700px)
						width calc(100% - 10px*2)
						margin-right 0
						position relative
						border-top solid 5px $team-grey
						border-radius 8px
						height 70px
						padding 10px
							
						.images
							display inline-block
							vertical-align middle
							width 20px
							padding-right 20px
							margin-bottom 0
							.frame
								height 40px
								width 20px
								display none
								
								&:first-child
									display block
									
								.image
									height 40px
									width 40px
						
						.text-wrapper
							vertical-align middle
							display inline-block
							width calc(100% - 40px - 10px)
							text-align left
							height 70px
							overflow hidden
							margin-left 10px
								
							p.description
								font-size 13px
								line-height 110%
						

			
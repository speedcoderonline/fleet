[data-page='friends']
	
	.main-content
		overflow auto
		background $light-grey
		min-height calc(100vh - 79px)
		
		@import "elements/connections-menu"
					
		section
			width 90%
			max-width 1090px
			margin auto
			margin-top 20px
				
			.title
				font-size 18px
				margin-bottom 10px
				
				@media(max-width 700px)
					font-size 15px
				
			.content
				&:empty:after
					content 'Nothing here'
					color rgba(black, .3)
					font-size 17px
					position relative
				
				@import "elements/profilecard"
				
				.add-card
					background-image url('../icons/plus.png')
					box-shadow -4px 20px 40px rgba(black,.08)
					margin-right 22px
					background-size 30%
					background-position center center
					background-repeat no-repeat
					height 173px
					width 250px + 20px*2
					background-color white
					//border-radius 5px
					cursor pointer
					display inline-block
					
					@media(max-width 700px)
						width 100%
						height 95px
						background-size 17.5%
						border-radius 8px
						margin-right 0
						margin-bottom 22px
						

			
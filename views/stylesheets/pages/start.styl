[data-page='start']
	
	.main-content
		color white
		header
			padding 200px 0
			text-align center
			position relative
			overflow hidden
			box-shadow 0 0 50px rgba(black, .35)
			@media (max-width: 500px)
				padding 150px 0
			
			video
				position absolute
				width 100%
				transform translate(-50%, -50%) scale(1.03)
				top 50%
				left 50%
				z-index -1
				filter: blur(7px) brightness(80%)
				@media(max-width 1370px)
					height 100%
					width auto			
			
			.logo
				width 70px
				height 70px
				background url('../images/logo.png')
				background-size contain
				background-position center
				background-repeat no-repeat
				margin auto
				
			.title
				width 80%
				max-width 1000px
				margin 35px auto
				margin-bottom 50px
				cursor default
				font-weight lighter
				span
					font-weight initial
				
			.signup-wrapper
				width 90%
				max-width 600px
				margin auto
				border-radius 5px
				overflow hidden
				display flex
				flex-direction row
				align-items stretch
				
				@media (max-width: 500px)
					flex-direction column
				
				input
					padding 15px 30px
					border none
					flex 1
					font-size 105%
					
				.submit-btn
					background linear-gradient(to right, #97A0D1, #D48F89)
					padding 15px
					cursor pointer
					
			.status
				position absolute
				width 100%
				top 30px
				font-size 160%
				font-weight initial
				opacity .8
				cursor default
				
				@media (max-width: 500px)
					font-size 130%
					
			a.video-link
				position absolute
				transform translateX(-50%)
				bottom 30px
				left 50%
				color white
				font-size 140%
				text-decoration none
				opacity .8
				img
					vertical-align middle
					height 20px
					margin-right 7px
					display inline-block
					
				div
					font-weight lighter
					vertical-align middle
					display inline-block

		section
			background #252525
			padding 100px 0
			text-align center

			h4
				margin-bottom 30px
				
			.divider
				height 2	px
				width 220px
				background linear-gradient(to right, #97A0D1, #D48F89)
				margin auto
				margin-top 15px
				
			p
				width 80%
				max-width 1000px
				margin auto
				opacity .8
				letter-spacing 1px
			
			article
				display inline-block
				h6
					opacity .6
					
				.content-wrapper
					text-align left
					display inline-block
					
					p
						width 100%
						margin-bottom 20px
				ul
					box-sizing border-box
					padding-left 30px
					list-style-type disc
					text-align left
					margin auto
					li
						list-style-type disc
						display list-item
						margin-bottom 5px
						opacity .8
						letter-spacing 1px
					
		
		section.darker
			background #1c1c1c
[data-page='start']
	
	.main-content
		color white
		header
			padding 250px 0
			background-image url('../images/new-york-person.jpg')
			background-size cover
			background-position center
			text-align center
			position relative
			
			.upper-logo
				position absolute
				top 0 
				left 0
				margin 15px 35px
				height 30px
				width 30px
				background url('../images/logo.png')
				background-size contain
				background-position center
				background-repeat no-repeat
				
			
			.logo
				width 70px
				height 70px
				background url('../images/logo-white.png')
				background-size contain
				background-position center
				background-repeat no-repeat
				margin auto
				
			.title
				width 800px
				margin 30px auto
				
			.signup-wrapper
				width 600px
				margin auto
				border-radius 5px
				overflow hidden
				display flex
				flex-direction row
				align-items stretch
				
				input
					padding 15px 30px
					border none
					flex 1
					font-size 105%
					
				.submit-btn
					background linear-gradient(to right, #97A0D1, #D48F89)
					padding 15px
					cursor pointer
					
			.status
				position absolute
				width 100%
				bottom 40px
				font-size 160%
				opacity .8


		section
			background #43474a
			padding 150px 0
			text-align center
			
			h3
				margin-bottom 30px
			p.text
				max-width 800px
				margin auto 
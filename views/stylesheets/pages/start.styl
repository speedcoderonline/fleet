[data-page='start']
	
	.main-content
		color white
		header
			padding 250px 0
			text-align center
			position relative
			overflow hidden
			@media (max-width: 500px)
				padding 150px 0
			
			video
				position absolute
				width 100%
				transform translate(-50%, -50%) scale(1.03)
				top 50%
				left 50%
				z-index -1
				filter: blur(7px) brightness(80%)
				@media(max-width 1370px)
					height 100%
					width auto			
			
			.logo
				width 70px
				height 70px
				background url('../images/logo.png')
				background-size contain
				background-position center
				background-repeat no-repeat
				margin auto
				
			.title
				width 80%
				max-width 800px
				margin 30px auto
				cursor default
				
			.signup-wrapper
				width 90%
				max-width 600px
				margin auto
				border-radius 5px
				overflow hidden
				display flex
				flex-direction row
				align-items stretch
				
				@media (max-width: 500px)
					flex-direction column
				
				input
					padding 15px 30px
					border none
					flex 1
					font-size 105%
					
				.submit-btn
					background linear-gradient(to right, #97A0D1, #D48F89)
					padding 15px
					cursor pointer
					
			.status
				position absolute
				width 100%
				bottom 40px
				font-size 160%
				opacity .8
				cursor default
				
				@media (max-width: 500px)
					font-size 130%


		section
			background #43474a
			padding 150px 0
			text-align center
			
			h3
				margin-bottom 30px
			p.text
				width 80%
				max-width 800px
				margin auto
				line-height 1.5
//Reoccuring styles

*
	margin 0
	padding 0
	font-family 'Lato', sans-serif

h3
	font-size 280%
	font-weight initial
	
	@media (max-width: 500px)
		font-size 120%
		
h4
	font-size 220%
	font-weight initial
	
h6
	font-size 90%
	font-weight lighter
	
p
	font-size 120%
	font-weight lighter
	line-height 1.5
	
ul
	padding-left 30px
	li
		font-size 120%
		font-weight lighter
	
input:focus
	outline-width: 0
img
	user-select none
	-webkit-user-select none
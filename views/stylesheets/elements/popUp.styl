.page-overlay
	position fixed
	z-index 100
	background rgba(black,.5)
	width 100%
	height 100%
	top 0
	text-align center
	
	.pop-up-box
		position fixed
		top 50%
		left 50%
		transform translate(-50%,-50%)
		background white
		width 90%
		max-width 440px
		border-radius 5px
		overflow hidden
		
		.text
			padding 40px
			font-size 20px
			color rgba(black,.65)
			font-weight 400
		.confirm
			width 100%
			padding 8px 0
			background linear-gradient(to right, $purple, $pink)
			color white
			cursor pointer

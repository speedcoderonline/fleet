smallHeights()
	width calc(100% - 10px*2)
	margin-right 0
	position relative
	border-top solid 5px $team-grey
	border-radius 8px
	height 70px
	padding 10px
	
	.images
		display inline-block
		vertical-align middle
		width 20px
		padding-right 20px
		margin-bottom 0
		.frame
			height 40px
			width 20px
			display none
			
			&:first-child
				display block
				
			.image
				height 40px
				width 40px
				background-size cover
				background-position center
	
	.text-wrapper
		vertical-align middle
		display inline-block
		width calc(100% - 40px - 10px)
		text-align left
		height 70px
		overflow hidden
		margin-left 10px
			
		p.description
			font-size 13px
			line-height 110%
		
		.choises-div
			margin-top 10px
	
.small-items
	.item
		smallHeights()

.item
	display inline-block
	margin-right 22px
	margin-bottom 22px
	padding 20px
	border-top solid 15px $team-grey
	// border-image $maingradient
	// border-image-slice 1
	box-shadow -4px 20px 40px rgba(black,.08)
	width 250px
	background white
	vertical-align top
	color black
	text-decoration none
	font-weight 100
	overflow hidden
	
	&:last-child
		margin-right 0
	
	.images
		width max-content
		margin auto
		padding-right 35px
		margin-bottom 10px
		.frame
			height 70px
			width 35px
			position relative
			display inline-block
			.image
				height 70px
				width 70px
				border-radius 50%
				background $purple
				background-size cover
				background-position center
	
	.text-wrapper
		text-align center

		.title
			font-size 15px
			text-decoration none
			font-weight bold
			color black
			margin-bottom 0
			
		.description
			font-size 18px
			line-height 135%
			height 100px
			overflow hidden
			
		.choises-div
			text-align center
			margin-top 20px
			
			.choise
				width 30px
				height 30px
				margin-right 10px
				border-radius 50%
				border solid 2px $purple
				background-color $grey
				display inline-block
				background-size 45%
				background-position center center
				background-repeat no-repeat
				cursor pointer
				
				&:last-child
					margin-right 0
					
				&.accept
					background-color darken($light-grey,20)
					background-image url('../icons/whitecheck.png')
				
				&.deny
					background-color $grey
					background-image url('../icons/cross.png')
					border-color $pink
			
	
	@media(max-width 700px)
		smallHeights()
			
		
		
.top-bar
	height 50px
	padding 15px 0
	background $dark-grey
	position relative
	z-index 10
	.small-logo
		display block
		margin 10px
		margin-left 15px + 10px + 20px
	.right-align
		position absolute
		right 0
		height 50px
		top 15px
		.item
			margin 16px 0
			display inline-block
			margin-right 30px
			color white
			text-decoration none
			font-size 100%
			
			&.btn
				margin 4px 0
				margin-right 30px
				padding 10px 24px
				border-radius 100px
				background $maingradient


header.signed-in
	background $dark-grey
	color white
	display flex
	padding 20px 60px
	align-items center
	text-align center
	
	h1
		font-weight lighter
		flex 1
		
		span
			font-weight initial
	#menu
		#menu-icon
			cursor pointer
			transition .5s
			position relative
			z-index 1200
			.menu-row
				width 30px
				height 2px
				background white
				margin 6px 0
				transition .5s
				transform-origin left
				&:nth-child(2)
					transition .3s
					
		.overlay
			position fixed
			transition .3s
			top 0
			left 0
			width 100%
			height 100%
		.menu
			position fixed
			top 0
			z-index 1100
			width 300px
			background $dark-grey
			height 100%
			transition ease-in-out .2s
			padding-top 100px
			box-shadow 0 0 10px rgba(black, .2)
			.menu-item
				text-align left
				display block
				color white
				text-decoration none
				padding 20px 60px
				cursor pointer
				font-size 120%
				font-weight initial
				
				
				&:hover
					background rgba(black, .1)
					
			#sign-out
				margin-top 150px
						
	#menu.menu-hidden
		.overlay
			opacity 0
			z-index -1
		.menu
			right -300px
			
	#menu.menu-shown
		#menu-icon
			transform translateX(5px)
			.menu-row
				&:nth-child(1)
					transform rotate(45deg) translateX(-3.5px)
				&:nth-child(2)
					opacity 0
					transform translateX(-5px) translateX(-100%)
				&:nth-child(3)
					transform rotate(-45deg) translateX(-3.5px)
					
		.overlay
			z-index 1000
			opacity 1
			background rgba(black, .5)
		.menu
			right 0